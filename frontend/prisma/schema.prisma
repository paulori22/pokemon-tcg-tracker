datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_PRISMA_URL")
}

generator client {
    provider = "prisma-client-js"
}

model CardExpasionSet {
    id           Int           @id @default(autoincrement())
    code         String        @unique
    name         String        @unique
    totalCards   Int
    releasedAt   DateTime?
    imagePath    String?
    cardBoosters CardBooster[]
}

model CardBooster {
    id                Int                 @id @default(autoincrement())
    cardExpasionSetId Int
    cardExpasionSet   CardExpasionSet     @relation(fields: [cardExpasionSetId], references: [id])
    name              String              @unique
    releasedAt        DateTime?           @db.Date
    imagePath         String?
    cards             CardOnCardBooster[]
}

model Card {
    id                  String              @id
    numberInExpasionSet Int
    name                String
    type                CardType
    rarity              CardRarity
    imagePath           String
    userCards           UsersOnCards[]
    cardBoosters        CardOnCardBooster[]
}

model CardOnCardBooster {
    cardBoosterId       Int
    cardBooster         CardBooster @relation(fields: [cardBoosterId], references: [id])
    cardId              String
    card                Card        @relation(fields: [cardId], references: [id])
    numberInExpasionSet Int

    @@id([cardBoosterId, cardId])
}

model UsersOnCards {
    userId    String
    cardId    String
    card      Card     @relation(fields: [cardId], references: [id])
    quantity  Int
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())

    @@id([userId, cardId])
}

enum CardRarity {
    Promo
    OneDiamond
    TwoDiamond
    ThreeDiamond
    FourDiamond
    OneStar
    TwoStar
    ThreeStar
    Crown
}

enum CardType {
    Colorless
    Grass
    Fire
    Water
    Psychic
    Fighting
    Lightning
    Metal
    Darkness
    Dragon
    Trainer
}
