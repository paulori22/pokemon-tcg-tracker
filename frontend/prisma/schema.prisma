datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_PRISMA_URL")
}

generator client {
    provider = "prisma-client-js"
}

model CardExpasionSet {
    id           Int                      @id @default(autoincrement())
    code         String                   @unique
    name         String                   @unique
    totalCards   Int
    releasedAt   DateTime?
    imagePath    String?
    cardBoosters CardBooster[]
    cards        CardOnCardExpansionSet[]
}

model CardBooster {
    id                Int                 @id @default(autoincrement())
    cardExpasionSetId Int
    cardExpasionSet   CardExpasionSet     @relation(fields: [cardExpasionSetId], references: [id])
    name              String              @unique
    releasedAt        DateTime?           @db.Date
    imagePath         String?
    cards             CardOnCardBooster[]
}

model Card {
    id                   String                   @id
    name                 String
    type                 CardType
    rarity               CardRarity
    imagePath            String
    firstThirdPullChance Float?
    fourthPullChance     Float?
    fifthPullChance      Float?
    userCards            UsersOnCards[]
    cardBoosters         CardOnCardBooster[]
    cardExpasionSets     CardOnCardExpansionSet[]
    deckOnCards          DeckOnCards[]
}

model CardOnCardBooster {
    cardBoosterId Int
    cardBooster   CardBooster @relation(fields: [cardBoosterId], references: [id])
    cardId        String
    card          Card        @relation(fields: [cardId], references: [id])

    @@id([cardBoosterId, cardId])
}

model CardOnCardExpansionSet {
    cardExpasionSetId   Int
    cardExpasionSet     CardExpasionSet @relation(fields: [cardExpasionSetId], references: [id])
    cardId              String
    card                Card            @relation(fields: [cardId], references: [id])
    numberInExpasionSet Int

    @@id([cardExpasionSetId, cardId])
}

model UsersOnCards {
    userId    String
    cardId    String
    card      Card     @relation(fields: [cardId], references: [id])
    quantity  Int
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())

    @@id([userId, cardId])
}

model Deck {
    id          Int           @id @default(autoincrement())
    name        String
    strategy    String
    userId      String
    visibility  Visibility
    cards       DeckOnCards[]
    createdAt   DateTime      @default(now())
    updatedAt   DateTime      @default(now())
    deckOnRates DeckOnRates[]
}

model DeckOnCards {
    deckId    Int
    deck      Deck     @relation(fields: [deckId], references: [id])
    cardId    String
    card      Card     @relation(fields: [cardId], references: [id])
    quantity  Int
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())

    @@id([deckId, cardId])
}

model DeckOnRates {
    deckId    Int
    deck      Deck     @relation(fields: [deckId], references: [id])
    userId    String
    rate      Int
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())

    @@id([deckId, userId])
}

enum CardRarity {
    Promo
    OneDiamond
    TwoDiamond
    ThreeDiamond
    FourDiamond
    OneStar
    TwoStar
    ThreeStar
    Crown
}

enum CardType {
    Colorless
    Grass
    Fire
    Water
    Psychic
    Fighting
    Lightning
    Metal
    Darkness
    Dragon
    Trainer
}

enum Visibility {
    Public
    Private
}
